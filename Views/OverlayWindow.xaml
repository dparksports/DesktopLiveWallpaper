<Window
    x:Class="DesktopLiveWallpaper.Views.OverlayWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <!-- Transparent background for the window, but we want buttons to be visible -->
        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top" Margin="20">
            <Button Content="Notepad" Click="OnNotepadClick" Margin="0,0,0,10" Width="100" Height="80"/>
            <Button Content="Scene" Click="OnSceneClick" Width="100" Height="80"/>
        </StackPanel>
    </Grid>
</Window>
